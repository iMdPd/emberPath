{{page-title 'ToDoList'}}
<div class='d-flex justify-content-center py-5'>
  <div class='card col-10'>
    <form class='row mx-0' {{on 'submit' this.addNewTask}}>
      <div class='col-auto'>
        <label for='inputPassword2' class='visually-hidden'>Password</label>
        <input
          type='text'
          value={{this.itemTask}}
          class='form-control my-2'
          required=''
          id='inputPassword2'
          placeholder='Add New Task'
          {{on 'input' this.onInputValue}}
        />
      </div>
      <div class='col-auto'>
        <button
          type='submit'
          class='btn btn-primary my-2'
          disabled={{this.hasEmptyValue}}
        >ADD</button>
      </div>
    </form>
    <List @items={{this.model}} />
  </div>
</div>

{{outlet}}